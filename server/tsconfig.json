{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "types": ["node", "jest"],

    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src", "tests"]
}
